        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Add Family or Next of Kin
            </h1>

        </section>

        <!-- Main content -->
        <section class="content">
            <!-- Info boxes -->
            <!-- /.row -->
            <form>
                <div class="row">
                    <div class="col-md-6">

                    <h3>User Details</h3>
                    <div class="form-group">
                        <label for="userFirstName">First Name</label>
                        <input type="text" class="form-control" id="userFirstName"name="firstName" placeholder="First Name" value="{{input.firstName}}">
                    </div>
                    <div class="form-group">
                        <label for="userLastName">Last Name</label>
                        <input type="text" class="form-control" id="userLastName" name="lastName" placeholder="Last Name" value="{{input.lastName}}">
                    </div>

                    <h4>Contact Details</h4>

                    <div class="form-group">
                        <label for="userHomePhone">Home Phone</label>
                        <input type="text" class="form-control" id="userHomePhone" name="homePhone" placeholder="Home Phone Number" value="{{input.homePhone}}">
                    </div>

                    <div class="form-group">
                        <label for="userMobilePhone">Mobile Phone</label>
                        <input type="text" class="form-control" id="userMobilePhone" name="mobilePhone" placeholder="Mobile Phone Number" value="{{input.mobilePhone}}">
                    </div>

                    <div class="form-group">
                        <label for="userEmail">Email address</label>
                        <input type="email" class="form-control" name="email" id="email" placeholder="Email" value="{{input.email}}">
                    </div>

                    <button type="submit" class="btn btn-default">Submit</button>

                    </div>


                </div>

            </form>


            <!-- Main row -->


